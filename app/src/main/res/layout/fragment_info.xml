<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".InfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50121653" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="218dp"
        android:layout_height="342dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="265dp"
            android:layout_height="177dp"
            android:layout_gravity="center"
            android:src="@drawable/start" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="191dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            android:src="@drawable/npdeas" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="330dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_gravity="center"
            android:src="@drawable/cpt" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="188dp"
            android:layout_height="172dp"
            android:layout_gravity="center"
            android:src="@drawable/ufpr" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="357dp"
        android:layout_height="221dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:background="#9EFFFFFF"
        android:gravity="center"
        android:text="O aplicativo Smart Mobility PRO foi desenvolvido dentro do projeto Startup Experience, iniciativa do Projeto de Extensão Universitária Ciência para Todos que tem por objetivo capacitar alunos de graduação e pós-graduação para o mercado de trabalho."
        android:textColor="@android:color/black"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="24dp"
        android:text="SMART MOBILITY PRO"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        app:fontFamily="@font/arimo_bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>